<Window x:Class="TryggDRIFT_Configurator.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TryggDRIFT_Configurator"
        mc:Ignorable="d"
        Title="TryggDrift Service Log" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid x:Name="grid">
        <RichTextBox Width="{Binding Path=ActualWidth, ElementName=grid, Mode=OneWay}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" x:Name="logTextblock" IsReadOnly="True"/>
    </Grid>
</Window>
