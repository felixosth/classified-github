<UserControl x:Class="InSupportDriftMilestonePlugin.InputEventNameUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InSupportDriftMilestonePlugin"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Content="Event name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="eventNameTxtBox" Height="23" Margin="10,36,10,0" TextWrapping="Wrap" VerticalAlignment="Top" x:FieldModifier="public" />
        <Button x:Name="okBtn" Content="OK" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Click="okBtn_Click"/>
        <Button x:Name="cancelBtn" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="cancelBtn_Click"/>
        <CheckBox x:Name="applyToAllChkBox" Content="Apply to all cameras" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"  x:FieldModifier="public"/>

    </Grid>
</UserControl>
