<insupportdrift:BasePluginConfigWpf x:Class="TryggDriftPingMonitorPlugin.PingPluginConfigurationWpf"
             xmlns:insupportdrift="clr-namespace:InSupport.Drift.Plugins.Wpf;assembly=InSupportDrift"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TryggDriftPingMonitorPlugin"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Gray" Margin="10,10,10,35">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="pingItemsStackPanel"  Orientation="Vertical"/>
            </ScrollViewer>
        </Border>
        <Button x:Name="addPingItemBtn" Content="Add" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="addPingItemBtn_Click"/>
        <Label Content="Ping count:" HorizontalAlignment="Left" Margin="10,0,0,7" VerticalAlignment="Bottom"/>
        <TextBox x:Name="pingCountTxtBox" HorizontalAlignment="Left" Height="23" Margin="80,0,0,6" TextWrapping="Wrap" Text="10" VerticalAlignment="Bottom" Width="31"/>
    </Grid>
</insupportdrift:BasePluginConfigWpf>
