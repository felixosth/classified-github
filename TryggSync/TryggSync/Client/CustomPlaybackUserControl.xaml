<UserControl x:Class="TryggSync.Client.CustomPlaybackUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TryggSync.Client"
             mc:Ignorable="d" Height="70.648" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="250*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="liveBtn" Content="Live" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="76" Click="liveBtn_Click"/>
        <Button x:Name="playBtn" Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="165,10,0,0" Click="playBtn_Click"/>
        <Button x:Name="pauseBtn" Content="Pause" HorizontalAlignment="Left" Margin="165,41,0,0" VerticalAlignment="Top" Width="75" Click="pauseBtn_Click"/>
    </Grid>
</UserControl>
