<UserControl x:Class="TryggSync.Client.CustomInkCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TryggSync.Client"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <InkCanvas x:Name="inkCanvas" Background="#00000000">
        <InkCanvas.DefaultDrawingAttributes>
            <DrawingAttributes Color="Red" FitToCurve="False" Height="8" IgnorePressure="False" IsHighlighter="False" StylusTip="Ellipse" StylusTipTransform="Identity" Width="8"/>
        </InkCanvas.DefaultDrawingAttributes>
    </InkCanvas>
</UserControl>
