<search:SearchFilterEditControl
    xmlns:search="clr-namespace:VideoOS.Platform.Search;assembly=VideoOS.Platform" x:Class="UVAPSearchAgent.Shared.Filters.RadioList.RadioListFilterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UVAPSearchAgent.Shared.Filters.RadioList"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="SearchFilterEditControl_Loaded">
    <ListBox x:Name="listBox" Background="{x:Null}" BorderBrush="{x:Null}" VirtualizingStackPanel.IsVirtualizing="False">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <RadioButton GroupName="radioBtn" Content="{Binding}" Checked="RadioButton_Checked"/>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</search:SearchFilterEditControl>
