<UserControl x:Class="UVAPMipPlugin.Settings.OverlaySettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UVAPMipPlugin.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <CheckBox x:Name="skeletonChkBox" Content="Skeleton visualization" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="178" Unchecked="CheckboxChanged" Checked="CheckboxChanged"/>
        <CheckBox x:Name="headChkBox" Content="Head detection visualization" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="178" Unchecked="CheckboxChanged" Checked="CheckboxChanged"/>
    </Grid>
</UserControl>
